{
  "manifest_version": 2,

  "name": "---NAME YOUR EXTENSION---",
  "description": "---DESCRIBE YOUR EXTENSION---",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
  ],
  "content_scripts": [
    {
        "matches": ["---DESIGNATE WEBSITES TO RUN ON---"],
        "js": ["content-script.js"]
    }
  ],
  "background": {
      "scripts": ["background.js"]
  }
}
